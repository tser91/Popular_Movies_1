<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@drawable/gradient_background"
    android:baselineAligned="false" android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle" tools:context="com.sergiosaborio.popularmovies.MovieListActivity">

    <!--
    This layout is a two-pane layout for the Movies
    master/detail flow.
    
    -->

    <fragment android:id="@+id/movie_list"
        android:name="com.sergiosaborio.popularmovies.MovieListFragment" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="1" />

    <FrameLayout android:id="@+id/movie_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="1" />

</LinearLayout>
